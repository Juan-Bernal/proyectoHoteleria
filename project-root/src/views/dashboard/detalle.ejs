<!-- src/views/dashboard/detalle.ejs -->
<div class="container">
  <div style="margin-bottom: 2rem;">
    <a href="/dashboard/hotel/<%= data.habitacion.id_hotel %>" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Volver a Habitaciones
    </a>
  </div>

  <div class="room-detail">
    <div class="room-detail-header">
      <div>
        <h1><%= data.habitacion.tipo_nombre %></h1>
        <p style="color: var(--text-light); font-size: 1.125rem;">
          <i class="fas fa-hotel"></i> <%= data.habitacion.hotel_nombre %>
        </p>
        <p style="color: var(--text-light);">
          <i class="fas fa-map-marker-alt"></i> <%= data.habitacion.hotel_direccion %>
        </p>
      </div>
      <div style="text-align: right;">
        <div class="room-card-price">
          $<%= data.habitacion.precio.toLocaleString() %>
          <span>/ noche</span>
        </div>
      </div>
    </div>

    <div class="room-detail-image">
      <i class="fas fa-bed"></i>
    </div>

    <div style="margin: 2rem 0;">
      <h2 style="margin-bottom: 1rem;"><i class="fas fa-info-circle"></i> Descripción</h2>
      <p style="line-height: 1.8; color: var(--text-dark);">
        <%= data.habitacion.tipo_descripcion || 'Habitación confortable y bien equipada para tu estadía.' %>
      </p>
    </div>

    <div style="margin: 2rem 0;">
      <h2 style="margin-bottom: 1rem;"><i class="fas fa-list-check"></i> Detalles</h2>
      <div class="room-card-info" style="gap: 2rem;">
        <span class="info-badge" style="font-size: 1rem;">
          <i class="fas fa-hashtag"></i>
          Habitación <%= data.habitacion.numero_habitacion %>
        </span>
        <span class="info-badge" style="font-size: 1rem;">
          <i class="fas fa-layer-group"></i>
          Piso <%= data.habitacion.nro_piso %>
        </span>
        <span class="info-badge" style="font-size: 1rem;">
          <i class="fas fa-users"></i>
          Capacidad: <%= data.habitacion.capacidad %> personas
        </span>
      </div>
    </div>

    <% if (data.habitacion.caracteristicas) { %>
      <div style="margin: 2rem 0;">
        <h2 style="margin-bottom: 1rem;"><i class="fas fa-star"></i> Características</h2>
        <p style="color: var(--text-dark);"><%= data.habitacion.caracteristicas %></p>
      </div>
    <% } %>

    <div style="margin: 2rem 0;">
      <h2 style="margin-bottom: 1rem;"><i class="fas fa-concierge-bell"></i> Servicios Adicionales Disponibles</h2>
      <div class="services-list">
        <% data.servicios.forEach(servicio => { %>
          <div class="service-item">
            <div class="service-icon">
              <i class="fas fa-check-circle"></i>
            </div>
            <div class="service-info">
              <h4><%= servicio.nombre %></h4>
              <p><%= servicio.descripcion || 'Servicio disponible' %></p>
              <p style="color: var(--primary-color); font-weight: bold;">
                $<%= servicio.precio.toLocaleString() %>
              </p>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <div style="margin-top: 3rem; text-align: center;">
      <a href="/dashboard/reservar/<%= data.habitacion.id_habitacion %>" class="btn" style="font-size: 1.125rem; padding: 1rem 3rem;">
        <i class="fas fa-calendar-check"></i> Reservar Ahora
      </a>
    </div>
  </div>
</div>
