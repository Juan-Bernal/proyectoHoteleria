<!-- src/views/admin/hoteles/list.ejs -->
<h1>Hoteles</h1>
<a href="/admin/hoteles/create" class="btn">Crear hotel</a>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Año</th>
      <th>Categoría</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach(h => { %>
      <tr>
        <td><%= h.id_hotel %></td>
        <td><%= h.nombre %></td>
        <td><%= h.direccion %></td>
        <td><%= h.anio_inauguracion %></td>
        <td><%= h.categoria %></td>
        <td>
          <a href="/admin/hoteles/<%= h.id_hotel %>/edit">Editar</a>
          <form action="/admin/hoteles/<%= h.id_hotel %>/delete" method="post" style="display:inline">
            <button type="submit">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
