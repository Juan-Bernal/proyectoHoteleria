<!-- src/views/admin/tipos/create.ejs -->
<h1>Crear Tipo de Habitación</h1>
<form action="/admin/tipos/create" method="post">
  <label>Nombre</label>
  <input type="text" name="nombre" required>
  <label>Capacidad Máxima</label>
  <input type="number" name="capacidad_max" required>
  <label>Precio</label>
  <input type="number" step="0.01" name="precio" required>
  <button type="submit">Guardar</button>
  <a href="/admin/tipos" class="btn">Cancelar</a>
</form>
