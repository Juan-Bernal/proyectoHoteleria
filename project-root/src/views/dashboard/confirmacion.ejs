<!-- src/views/dashboard/confirmacion.ejs -->
<div class="container">
  <div class="confirmation-card">
    <div class="success-icon">
      <i class="fas fa-check-circle"></i>
    </div>
    
    <h1 style="color: var(--secondary-color); margin-bottom: 1rem;">
      ¡Reserva Confirmada!
    </h1>
    
    <p style="font-size: 1.125rem; color: var(--text-light); margin-bottom: 2rem;">
      Tu pago ha sido procesado exitosamente
    </p>

    <div class="confirmation-code">
      <i class="fas fa-ticket-alt"></i> 
      Código de Reserva: #<%= data.reserva.id_reserva %>
    </div>

    <div style="background: var(--bg-light); padding: 1.5rem; border-radius: var(--radius); margin: 2rem 0; text-align: left;">
      <h3 style="margin-bottom: 1rem;"><i class="fas fa-info-circle"></i> Detalles de tu Reserva</h3>
      
      <div style="display: grid; gap: 0.75rem;">
        <div style="display: flex; justify-content: space-between;">
          <span style="color: var(--text-light);">Hotel:</span>
          <strong><%= data.reserva.nombre_hotel %></strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span style="color: var(--text-light);">Dirección:</span>
          <strong><%= data.reserva.direccion_hotel %></strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span style="color: var(--text-light);">Huésped:</span>
          <strong><%= data.reserva.nombre_huesped %></strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span style="color: var(--text-light);">Entrada:</span>
          <strong><%= new Date(data.reserva.fecha_inicio).toLocaleDateString() %></strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span style="color: var(--text-light);">Salida:</span>
          <strong><%= new Date(data.reserva.fecha_fin).toLocaleDateString() %></strong>
        </div>
        <div style="display: flex; justify-content: space-between;">
          <span style="color: var(--text-light);">Personas:</span>
          <strong><%= data.reserva.cantidad_personas %></strong>
        </div>
        <div style="display: flex; justify-content: space-between; padding-top: 0.75rem; border-top: 2px solid var(--border-color);">
          <span style="color: var(--text-light);">Valor Total:</span>
          <strong style="color: var(--primary-color); font-size: 1.25rem;">
            $<%= data.reserva.valor_total.toLocaleString() %>
          </strong>
        </div>
      </div>
    </div>

    <div style="background: #dbeafe; border-left: 4px solid var(--primary-color); padding: 1rem; border-radius: var(--radius); margin: 2rem 0; text-align: left;">
      <h4 style="margin-bottom: 0.5rem;"><i class="fas fa-lightbulb"></i> Instrucciones para el Check-in</h4>
      <ul style="margin: 0; padding-left: 1.5rem; color: var(--text-dark);">
        <li>Presenta tu código de reserva al llegar al hotel</li>
        <li>Lleva un documento de identidad válido</li>
        <li>El check-in está disponible a partir de las 2:00 PM</li>
        <li>El check-out debe realizarse antes de las 12:00 PM</li>
      </ul>
    </div>

    <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
      <a href="/dashboard" class="btn">
        <i class="fas fa-home"></i> Volver al Inicio
      </a>
      <button onclick="window.print()" class="btn btn-secondary">
        <i class="fas fa-print"></i> Imprimir Confirmación
      </button>
    </div>
  </div>
</div>
