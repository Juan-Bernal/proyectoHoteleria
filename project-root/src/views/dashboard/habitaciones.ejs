<!-- src/views/dashboard/habitaciones.ejs -->
<div class="container">
  <div style="margin-bottom: 2rem;">
    <a href="/dashboard" class="btn btn-secondary">
      <i class="fas fa-arrow-left"></i> Volver al Buscador
    </a>
  </div>

  <section class="hero" style="padding: 2rem 0;">
    <h1><i class="fas fa-hotel"></i> <%= data.hotel.nombre %></h1>
    <p><i class="fas fa-map-marker-alt"></i> <%= data.hotel.direccion %></p>
  </section>

  <% if (data.habitaciones.length === 0) { %>
    <div style="text-align: center; padding: 4rem 0;">
      <i class="fas fa-bed" style="font-size: 4rem; color: var(--text-light); margin-bottom: 1rem;"></i>
      <h2>No hay habitaciones disponibles</h2>
      <p style="color: var(--text-light);">Intenta con otro hotel o fecha</p>
    </div>
  <% } else { %>
    <h2 style="margin: 2rem 0; color: var(--text-dark);">
      <i class="fas fa-door-open"></i> Habitaciones Disponibles (<%= data.habitaciones.length %>)
    </h2>
    
    <div class="rooms-grid">
      <% data.habitaciones.forEach(habitacion => { %>
        <div class="room-card">
          <div class="room-card-image">
            <i class="fas fa-bed"></i>
          </div>
          <div class="room-card-content">
            <h3 class="room-card-title"><%= habitacion.tipo_nombre %></h3>
            <p style="color: var(--text-light); margin-bottom: 1rem;">
              <%= habitacion.tipo_descripcion || 'Habitación confortable' %>
            </p>
            <div class="room-card-info">
              <span class="info-badge">
                <i class="fas fa-hashtag"></i>
                Habitación <%= habitacion.numero_habitacion %>
              </span>
              <span class="info-badge">
                <i class="fas fa-layer-group"></i>
                Piso <%= habitacion.nro_piso %>
              </span>
              <span class="info-badge">
                <i class="fas fa-users"></i>
                <%= habitacion.capacidad %> personas
              </span>
            </div>
            <div class="room-card-price">
              $<%= habitacion.precio.toLocaleString() %>
              <span>/ noche</span>
            </div>
            <a href="/dashboard/habitacion/<%= habitacion.id_habitacion %>" class="btn btn-block">
              Ver Disponibilidad <i class="fas fa-arrow-right"></i>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
