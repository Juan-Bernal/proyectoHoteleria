<!-- src/views/admin/reportes/periodo.ejs -->
<h1>Reporte: Reservas por Período</h1>

<form method="GET" class="filtro-form">
  <div class="form-group">
    <label>Fecha Inicio:</label>
    <input type="date" name="fecha_inicio" value="<%= typeof filtros !== 'undefined' ? filtros.fecha_inicio || '' : '' %>" required>
  </div>
  <div class="form-group">
    <label>Fecha Fin:</label>
    <input type="date" name="fecha_fin" value="<%= typeof filtros !== 'undefined' ? filtros.fecha_fin || '' : '' %>" required>
  </div>
  <button type="submit" class="btn">Generar Reporte</button>
  <a href="/admin/reportes" class="btn btn-secondary">Volver</a>
</form>

<% if (typeof data !== 'undefined' && data.length > 0) { %>
  <h3>Resultados: <%= data.length %> reservas encontradas</h3>
  <table>
    <thead>
      <tr>
        <th>ID Reserva</th>
        <th>Fecha Reserva</th>
        <th>Fecha Inicio</th>
        <th>Fecha Fin</th>
        <th>Huésped</th>
        <th>Hotel</th>
        <th>Personas</th>
        <th>Habitaciones</th>
        <th>Valor Total</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(r => { %>
        <tr>
          <td><%= r.id_reserva %></td>
          <td><%= new Date(r.fecha_reserva).toLocaleDateString() %></td>
          <td><%= new Date(r.fecha_inicio).toLocaleDateString() %></td>
          <td><%= new Date(r.fecha_fin).toLocaleDateString() %></td>
          <td><%= r.nombre_huesped %></td>
          <td><%= r.nombre_hotel %></td>
          <td><%= r.cantidad_personas %></td>
          <td><%= r.cantidad_habitaciones %></td>
          <td>$<%= r.valor_total %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else if (typeof filtros !== 'undefined' && filtros.fecha_inicio) { %>
  <p class="no-resultados">No se encontraron reservas en el período seleccionado.</p>
<% } %>
